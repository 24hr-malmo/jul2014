body
    background-color white
    margin 0
    padding 0
    font-family sans-serif

.box    
    display flex
    padding 2rem

h1
    font-size 4rem
h2
    line-height 1.8rem

.instructions
    flex .5
    color #666
    padding 0 2rem 2rem

#tree
    flex 1

#svg-tree
    width: 100%;
    min-width: 100%;
    max-height 700px;
 
#ornament-templates
    display none

.ornament
    opacity 0
    transition opacity .5s ease-out 

.ornament-active
    opacity 1
